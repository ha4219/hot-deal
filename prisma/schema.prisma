generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model deal {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  link            String
  thumb_img       String?
  title           String
  shop_info       String
  price_info      String
  delivery_info   String
  category        String
  regdate         String
  author          String
  created_at      DateTime
}

model User {
  id            String  @id @map("_id")
  first_name    String
  last_name     String
  image         String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}